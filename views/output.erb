<div class="well">
  <div class="row">
    <div class="col-md-3">
      <button type="submit" class="btn btn-default" id="edit"><i class="fas fa-pencil-alt"></i></button>
      <br><br>
      <button type="submit" class="btn btn-default" id="add"><i class="fas fa-plus"></i></button>
      <form action="/output/:id" method="post" class="newdef">
        <div class="form-group"><br>
          <input type="text" name="newdef">
          <button type="submit" name="button" class="btn btn-danger">Add</button>
        </div>
      </form>
      <br><br>
      <form action="/" method="post">
        <div class="form-group">
          <button type="submit" class="btn btn-default" name="delete"><i class="fas fa-trash-alt"></i></button>
        </div>
      </form>
      <form action="/" method="post">
        <div class="form-group">
          <button type="submit" class="btn btn-default" name="back"><a href="/"><i class="fas fa-undo-alt"></i></a></button>
        </div>
      </form>
    </div>
    <div class="col-md-7">
      <h2><%= @words.word %>: <%= @words.definition %></h2>
      <h2><%= @words.word %>: <%= @newdef %></h2>
      <div id="newdefinition">
      </div>
    </div>
  </div>
